<div class="container text-center">
    <div id="showcard">
        <img src="<%= @superpower.pic %>" alt="">
        <h2 class="showcard-header"> <%= @superpower.name %> </h2>
        <p class="showcard-description"><%= @superpower.description %></p>
        <div class="showcard-price">
          <h3><%= @superpower.price %> â‚¬ / Day</h3>
        </div>
    </div>

  <div class="book_it">
      <h2 class="text-center">BOOK YOUR POWER</h2>
       <%= simple_form_for [@superpower, @rent] do |f| %>
        <%= f.input :date_from, as: :string, required: true, input_html: { class: "datepicker" } %>
        <%= f.input :date_to, as: :string, required: true, input_html: { class: "datepicker" } %>
        <%= f.button :submit, "BOOK IT", class: "btn btn-danger w-100 mb-4" %>
      <% end %>
  </div>
<div class="container">
  <div id="map"
      style="border: 1px solid white; box-shadow: none; z-index: 1; width: 56%; height: 400px; margin: 60px 200px 60px 485px; border-radius: 16px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV["MAPBOX_API_KEY"] %>">
  </div>
</div>

